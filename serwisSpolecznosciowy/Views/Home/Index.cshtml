@using serwisSpolecznosciowy.Models;
@model serwisSpolecznosciowy.Models.User


@{
    ViewBag.Title = "Managing Page";
}

@{ 
    var user = Session["loggedUser"] as User;
    var initResourceMessage = TempData["InitResourceMessage"] as string;
}

<h2>@ViewBag.Title</h2>

<h3> @{if (user.Login == "admin")
       {
            @Html.ActionLink("Add user", "Add", "User")
            <br/>
            @Html.ActionLink("Delete user", "Delete", "User")
            <br />
            @Html.ActionLink("List of users", "List", "User")
            <br/>
            @Html.ActionLink("Init users with exemplary data.", "Init", "User")
            <br />
    }
       @Html.ActionLink("Add friend", "Add", "Friends")
            <br />

        @Html.ActionLink("Delete friend", "Delete", "Friends")
        <br />

        @Html.ActionLink("List of friends", "List", "Friends")
        <br />

        @Html.ActionLink("Export friends to file", "ExportFriends", "Friends")
        <br />

        @Html.ActionLink("Import friends from file", "ImportFriends", "Friends")
        <br />


        @Html.ActionLink("Logout", "Logout", "Login")
        <br />
}
    </h3>

 @if(initResourceMessage == "CANNOT INIT")
{
<br />
<h4>@MyLanguageResources.ErrorCannotInit</h4>
 }
 else if (initResourceMessage == "INIT DONE")
 {
    <br />
    <h5>@MyLanguageResources.SuccessInitDone</h5>
 }



